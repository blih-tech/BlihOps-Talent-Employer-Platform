{
  "name": "blihops-talent-platform",
  "version": "0.1.0",
  "private": true,
  "description": "BlihOps Talent & Employer Platform - Monorepo",
  "scripts": {
    "build": "pnpm -r --filter './packages/*' build",
    "dev": "pnpm -r --filter './packages/*' dev",
    "lint": "pnpm -r --filter './packages/*' lint",
    "lint:fix": "pnpm -r --filter './packages/*' lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm -r --filter './packages/*' type-check",
    "test": "pnpm -r --filter './packages/*' test",
    "clean": "pnpm -r --filter './packages/*' clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/node": "^20.11.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.0",
    "pnpm": "^8.15.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
